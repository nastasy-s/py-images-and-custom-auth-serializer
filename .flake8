[flake8]
inline-quotes = "
ignore = E203, E266, W503, N807, N818, F401
max-line-length = 79
max-complexity = 18
select = B,C,E,F,W,T4,B9,Q0,N8,VNE
exclude =
    .git,
    __pycache__,
    */migrations/*,
    venv,
    .venv,
    env,
    .env,
    */static/*,
    */media/*,
    db.sqlite3,
    *.db,
    *.sqlite,
    *.sqlite3,
    *.pyc,
    .idea,
    .vscode,
    .DS_Store,
    .pytest_cache,
    *.iml,
    */tests/*,
    */test_*.py,
    manage.py
